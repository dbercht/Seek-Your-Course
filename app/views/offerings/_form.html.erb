<% form_for @offering do |f| %>
  <%= error_messages_for :object => [@offering, @contact] %>
  <p>
    <%= f.label "Title*" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Type*" %><br />
    <%= collection_select(:offering, :type_id, @types, :id, :category, {:prompt => true}, :selected => @offering.type) %>
  </p>
  <p>
    <label for="offering_Topic/Medium">Topic/Medium*</label><br />
    <% @topics.each do |topic| -%>
      <%= check_box_tag "offering[topic_ids][]", topic.id, @offering.topics.include?(topic) -%> 
      <%= topic.category -%>
    <% end -%>
  </p>
  <p>
    <label for="offering_state">U.S State/Abroad</label><br />
    <%= collection_select(:offering, :location_id, @locations, :id, :state, {:prompt => true}, :selected => @offering.location)%>
  </p>
  <p>
    <%= f.label "US City or non-US Location*" %><br />
    <%= f.text_field :specific_location %>
  </p>
    <p>
    <%= f.label "Start Date*" %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label "Registration Begins*" %><br />
    <%= f.date_select :registration_begins %>
  </p>
  <p>
    <%= f.label :registration_deadline %><br />
    <%= f.date_select :registration_deadline, :include_blank => true %>
  </p>
  <p>
    <%= f.label "Link*" %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label "Description*"%><br />
    <%= f.text_area :description %>
  </p>
  <% fields_for :contact do |contact| %>
  <p> 
     <label for="contact_name">Contact Name*</label><br /> 
     <%= contact.text_field :name %> 
  </p>
  <p> 
     <label for="contact_number">Contact Number</label><br />
     <%= contact.text_field :number %>   </p>
  <p> 
     <label for="contact_email">Contact E-Mail</label><br /> 
     <%= contact.text_field :email%>   </p>
  <% end%>
  <%=f.radio_button :validated, true%><%= f.label :validated, "Yes"%>
  <%=f.radio_button :validated, false%><%= f.label :validated, "No"%>
  <%= link_to "Destroy Offering", @offering, :confirm => 'Are you sure?', :method => :delete %> 

  <p><%= f.submit %></p>
<% end %>
