<% form_for @offering do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= collection_select(:offering, :type_id, @types, :id, :category, {:prompt => true}, :selected => @offering.type) %>
  </p>
  <p>
    <label for="offering_Topic/Medium">Topic/Medium</label><br />
    <% @topics.each do |topic| -%>
      <%= check_box_tag "offering[topic_ids][]", topic.id, @offering.topics.include?(topic) -%> 
      <%= topic.category -%>
    <% end -%>
  </p>
  <p>
    <label for="offering_state">U.S State/Abroad</label><br />
    <%= f.select :state, Offering::LOCATIONS %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :registration_begins %><br />
    <%= f.date_select :registration_begins %>
  </p>
  <p>
    <%= f.label :registration_deadline %><br />
    <%= f.date_select :registration_deadline, :include_blank => true %>
  </p>
  <p>
    <%= f.label "Link" %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit %></p>
<% end %>
