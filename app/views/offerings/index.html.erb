<% title "Offerings" %>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>State</th>
    <th>Registration Begins</th>
    <th>Registration Deadline</th>
    <th>Link</th>
    <th>Description</th>
  </tr>
  <% for offering in @offerings %>
    <tr>
      <td><%=h offering.title %></td>
      <td><%=h offering.location %></td>
      <td><%=h offering.state %></td>
      <td><%=h offering.registration_begins %></td>
      <td><%=h offering.registration_deadline %></td>
      <td><%=h offering.link %></td>
      <td><%=h offering.description %></td>
      <td><%= link_to "Show", offering %></td>
      <td><%= link_to "Edit", edit_offering_path(offering) %></td>
      <td><%= link_to "Destroy", offering, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Offering", new_offering_path %></p>
