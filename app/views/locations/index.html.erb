<%title "Offerings by Location" %>


<% @locations.each do |location| %>
  
    <%= link_to ((location.state << "<br />").html_safe, region_location_path(location.region, location))%>
    <% if current_admin %>
      | <%= link_to 'Edit', edit_region_location_path(location.region, location) %>
      | <%= link_to 'Destroy',  region_location_path(location.region, location), :confirm => 'Are you sure?', :method => :delete %>
    <%end%>
    <br />
<% end %>

<br />

<%= link_to 'Back', regions_path %>
<% if current_admin %>
  <%= link_to 'New Location', new_region_location_path %>
<% end %>
<%= content_for(:span, render(:partial => 'offerings/browse'))%>
