<%title( @name = @user.name) %>

 <%if (@user.profile.nil?) %>
    <%= link_to ('Create a profilehere', new_profiles_path) if current_user == @user%>
    <%= content_tag(:p, @name << " still does not have a profile") %>
  <% else %> 
    <%= render :partial => "profiles/profile", :locals => {:profile => @user.profile} %>
  <% end %>

