<%title "Profiles" %>
<div class="learning-results clearfix">
<h1>
Profiles &gt
<%=params[:role].humanize.pluralize%>
</h1>
<% @profiles.each do |@profile| %>
	  <div class="grid-gallery user-gallery ui-corner-all">
	  <%unless @profile.nil? %>
	    <%=link_to image_tag(@profile.picture.url(:thumb)), user_path(@profile.user) %>
	  <%end%>
			<%if @profile.user.role=="instructor"%>
		    <%=link_to @profile.user.name, user_path(@profile.user) %>
			<%else%>
		    <%=link_to @profile.user.institution_name, user_path(@profile.user) %>
			<% end %>			
 	 </div>
<% end %>

<br />
<div class="clearfix"></div>

<div class="syc_pagination">
  <%= will_paginate @profiles, :container => false %>
  	<div class="page_info">
      <%= "("<<  @profiles = Profile.all(:joins => :user, :conditions => ["users.role = ?",  params[:role]]).size.to_s << " Results)" %> 
  	</div>
	</div>
</div>
<%= content_for(:span, render(:partial => 'offerings/browse')) %>
