<%title "Offerings by Type" %>
<div class="learning-results clearfix">
  
  <h1>BROWSE &gt; by TYPE</h1>

  <% @types.each do |type| %>
    <div class="bytype">
      <h4><%= link_to type.category, type %>
      <% if current_admin %>
        <%= link_to 'Edit', edit_type_path(type) %>
        <%= link_to 'Destroy', type, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
  <% end %>

<br />
<% if current_admin %>
  <%= link_to 'New Type', new_type_path %>
<% end %>
