<div class="contentlearning-profile clearfix">
  <h1>Profile: <%=@name %> </h1>
  <p>
      <%=content_tag(:tr,  content_tag(:td) << content_tag(:td, image_tag( @profile.picture.url(:regular), :align => 'left'))) if @profile.picture.exists? %>   
      <strong>Where I Live</strong>: <%= @profile.specific_location %> <%= ',' unless (@profile.specific_location == nil || @profile.specific_location.size == 0)%> <%= @user.country %> <br />
      <strong>What I Do</strong>: <%= @profile.focus %> <br />
    </p>
    <p>
      <strong>About My Work</strong>: <br />
      <%= @profile.description %>
    </p>
    <p>
      <%= content_tag (:strong, "Testimonials <br />".html_safe) unless (@profile.testimonials == nil || @profile.testimonials.size == 0) %>
      <%= content_tag (:p, @profile.testimonials.html_safe  << "<br />".html_safe) unless (@profile.testimonials == nil || @profile.testimonials.size == 0) %>
    <% unless @offerings.size == 0 %>
      <p><strong>Upcoming Listings:</strong><br />
      <% @offerings.each do |offering| %>
        <%= render :partial => 'offerings/offering_snippet', :locals =>{:offering => offering} %> 
      <% end %>
    <% end %>
    <% unless @past_offerings.size == 0 %>
      <p><strong>Past Classes:</strong><br />
      <% @past_offerings.each do |offering| %>
        <%= render :partial => 'offerings/offering_snippet', :locals =>{:offering => offering} %> 
      <% end %>
    <% end %>
<p><strong>Contact Info</strong>: <br />

  <%= content_tag(:p, link_to("Website", url_with_protocol(@user.website)) ) %>
  <%= content_tag(:p, mail_to( @user.email, "E-mail me")) if ((@profile.email == "1"))  %>
  <%= content_tag(:p, link_to("Blog", url_with_protocol(@user.blog))) if (@profile.blog == "1")  %>
  <%= content_tag(:p, link_to("Facebook", url_with_protocol(@user.facebook))) if ((@profile.facebook == "1"))  %>
  <%= content_tag(:p, link_to("Twitter", url_with_protocol(@user.twitter))) if ((@profile.twitter == "1"))  %>
  
<p><strong>Blog Feed:</strong></p>
<p>&gt;&gt;&gt;RSS Feed </p>
<p><br />
</p>

