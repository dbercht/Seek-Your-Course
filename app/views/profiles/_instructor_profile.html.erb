      <%=content_tag(:tr,  content_tag(:td) << content_tag(:td, image_tag( @profile.picture2.url(:regular)))) if @profile.picture2.exists? %> 
      <%=content_tag(:tr,  content_tag(:td) << content_tag(:td, image_tag( @profile.picture3.url(:regular)))) if @profile.picture3.exists? %> 
      <%=content_tag(:tr,  content_tag(:td) << content_tag(:td, image_tag( @profile.picture4.url(:regular)))) if @profile.picture4.exists? %> 
    </div>
    

