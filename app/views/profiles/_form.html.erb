    <div id="error_notice" class="error_messages">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="contentlearning-profile clearfix ui-widget-content">
    <%=render :partial => 'form_attributes', :locals => {:profile => profile} %>

  <div class="actions">
    <div class='ui-button-container'><p><%= profile.submit :class =>"ui-button" %></p></div>
  </div>
</div>
<% end %>

