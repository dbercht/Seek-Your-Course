<% if @topic.image.exists? then %>
  <td><%= image_tag @topic.image.url(:thumb) %></td>
<% end %>

<%title @topic.category %>
    
<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @topic.category %>
</p>
<% for @offering in @offerings do %>
  <%= render @offering %>
<% end %>


<% if current_admin %>
  <%= link_to 'Edit', edit_topic_path(@topic) %> |
 <% end %>
<%= link_to 'Back', topics_path %>
