<%title "Offerings by Topic" %>


<% @topics.each do |topic| %>
    <%= topic.category %>
    <% if topic.image.exists? %>
      <%= link_to image_tag(topic.image.url(:thumb)), topic %>
    <% else %>
      <%= link_to 'Show', topic %>
    <% end %>
    <% if current_admin %>
      | <%= link_to 'Edit', edit_topic_path(topic) %>
      | <%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
<% end %>

<br />

<% if current_admin %>
  <%= link_to 'New Topic', new_topic_path %>
<% end %>
