<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta name="Seek Your Course" content="listings,offerings,artistic,retreats,conferences,seekyourcourse" />

  <title>
  <%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
  <%= stylesheet_link_tag "jquery-ui-1.8.11.custom", "pirobox", "application", "960"  %>
  <%= javascript_include_tag "jquery-1.5.1.min", "jquery-ui-1.8.11.custom.min", "pirobox_extended", :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
  <script type="text/javascript">
//<![CDATA[
      jQuery(document).ready( function() {
        jQuery(".ui-button").button();
        jQuery("#flash_notice").delay(5000).hide('blind');
        jQuery(".error_messages").delay(5000).hide('blind');
       jQuery().piroBox_ext({
        piro_speed : 900,
        bg_alpha : 0.1,
        piro_scroll : true //pirobox always positioned at the center of the page
        });
      });
  //]]>
  </script>
</head>

<body>
    <%= render :partial => "layouts/user_nav" %>

    <div class="clearfix"></div>
    <% flash.each do |name, msg| %><%= content_tag :div, msg, :id => "flash_#{name}" %><% end %><!--<%= content_tag :h1, yield(:title) if show_title? %> -->
    <%=render :partial => 'layouts/header' %>

    <div class="clearfix"></div>

    <div id="" class="container_12">
      <div id="" class="grid_12">
        <div id="nav-main" class="clearfix">
          <%= link_to('Learning Opportunities', offerings_path, :class =>'buttons') %>
          <%= link_to('Instructor Profiles', users_path(:role => User::ROLES[0]), :class =>'buttons')%>
          <%= link_to('Retreat & Conference Profiles', users_path(:role => User::ROLES[1]), :class =>'buttons')%>
          <a href="#" class="buttons">Interviews</a>
          <a href="#" class="buttons">Blogs</a>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>

    <div id="" class="container_12">
          <%= yield :browse %>
          <%= yield :user_admin %>
      <div id="" class="grid_content">
        <%= yield %>
      </div>
      <% if (request.path != '/') then %>
        <div class="grid_adsright">
          <%= render :partial => "layouts/ads" %>
        </div>
      <% end %>
      <div class="clear"></div>
      <%= render :partial => "layouts/footer" %>
      </div>
    </div>
</body>
</html>

