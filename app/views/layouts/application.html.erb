

<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", "jquery-ui-1.8.11.custom", "960" %>
    <%= javascript_include_tag "jquery-1.5.1.min", "jquery-ui-1.8.11.custom.min", :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>

    <script>
      jQuery(document).ready( function() {
        jQuery("#flash_notice").delay(5000).hide('blind');
        //jQuery("#flash_error").delay(5000).hide('blind');
      });
    </script>
  </head>
  <body>
    <div id="container">
      <%= render :partial => "layouts/user_nav" %>
      <div class="clear"></div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <!--<%= content_tag :h1, yield(:title) if show_title? %> -->
      <%=render :partial => 'layouts/header' %>
      <div class="clear"></div>
      <div id="nav_bar">
        <%= link_to('Learning Opportunities', offerings_path) %>
        <%= link_to('Artist Profiles', users_path(:role => User::ROLES[0]))%>
        <%= link_to('Retreat & Conference Profiles', users_path(:role => User::ROLES[1]))%>
        <a href="">Interviews</a>
        <a href="">Blog</a>
      </div>
      <% if (request.path != '/') then %>
        <% content_for :browse do %>
          <div id="browse_content_main" class="box">
            <h3>Browse</h3>
            <ul>
              <li><%= link_to "by type", types_path%></li>
              <li><%= link_to "by topic", topics_path%></li>
              <li><%= link_to "by start date", offerings_path %></li>
              <li><%= link_to "by location", regions_path%></li>
            </ul>
            <%= yield :filter_results %>
          </div>
        <% end %>
        <%= render :partial => "layouts/ads" %>
      <% end %>
      <%= yield :browse unless current_user %>
      <%= render :partial => "users/user_admin"  unless !current_user %>
      <%= yield :user_admin unless !current_user %>
      <div id="content">
        <%= yield %>
      </div>
      <div class="clear"></div>
      <%= render :partial => "layouts/footer" %>
    </div>
  </body>
</html>

