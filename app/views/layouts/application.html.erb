<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<%= favicon_link_tag %>
   <meta name="Seek Your Course" content="listings,offerings,artistic,retreats,conferences,seekyourcourse" />

  <title>
  <%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
  <%= stylesheet_link_tag "jquery-ui-1.8.11.custom", "pirobox", "application", "960"  %>
  <%= javascript_include_tag "jquery-1.5.1.min", "jquery-ui-1.8.11.custom.min", "pirobox_extended", :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
  <script type="text/javascript">
//<![CDATA[
      jQuery(document).ready( function() {
        jQuery(".ui-button").button();
        jQuery("#flash_notice").delay(5000).hide('slide');
        jQuery("#flash_alert").delay(5000).hide('slide');
        jQuery(".error_messages").delay(5000).hide('slide');
        jQuery(".error_notice").delay(5000).hide('slide');
       jQuery().piroBox_ext({
        piro_speed : 900,
        bg_alpha : 0.1,
        piro_scroll : true //pirobox always positioned at the center of the page
        });
      });
  //]]>
  </script>

          <%= yield :social_media_meta %>
</head>

<body>
    <%= render :partial => "layouts/user_nav" %>

    <div class="clearfix"></div>
    <% flash.each do |name, msg| %><%= content_tag :div, msg, :id => "flash_#{name}" %><% end %><!--<%= content_tag :h1, yield(:title) if show_title? %> -->
    <%=render :partial => 'layouts/header' %>

    <div class="clearfix"></div>

    <%= render :partial => "layouts/user_browse" %>


    <div class="clearfix"></div>

    <div id="" class="container_12">
          <%= yield :browse %>
          <%= yield :user_admin %>
      <div id="" class="grid_content">
        <%= yield %>
      </div>
      <% if (request.path != '/') then %>
        <div class="grid_adsright">
          <%= render :partial => "layouts/ads" %>
        </div>
      <% end %>
      <div class="clear"></div>
      <%= render :partial => "layouts/footer" %>
      </div>
    </div>
<%if Rails.env.production?%>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-6966727-3']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
<% end %>
</script>
</body>
</html>

