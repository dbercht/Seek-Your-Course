<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", "jquery-ui-1.8.11.custom" %>
    <%= javascript_include_tag "jquery-1.5.1.min", "jquery-ui-1.8.11.custom.min", :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%= render :partial => "layouts/user_nav" %>
      <div class="clear"></div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%=render :partial => 'layouts/header' %>
      <div class="clear"></div>
      <div id="nav_bar">
        <%= link_to('Learning Opportunities', offerings_path) %>
        <%= link_to('Artist Profiles', users_path(:role => 'artist'))%>
        <%= link_to('Retreat & Conference Profiles', users_path(:role => 'coordinator'))%>
        <a href="">Interviews</a>
        <a href="">Blog</a>
      </div>
      <div id="browse_content" class='box left'>
        <%= yield :browse%>
      </div>
      <div id="about_content" class='box right'>
       
      </div>
      <div class="clear"></div>
      <div class='lower_box box left'>

      </div> 
      <div class='lower_box box left' style="margin-right: 15px;margin-left: 15px; background:#994;">

      </div> 
      <div class='lower_box box left'>

      </div> 
      <div id="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
